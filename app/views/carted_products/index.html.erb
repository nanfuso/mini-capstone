<h1>Check Out Page</h1>

<div class="well">
<% @carted_products.each do |carted_product| %>
<h3><%= carted_product.compter.name %> - <%= carted_product.compter.price %> X <%= carted_product.quantity %> <%= link_to "remove", "/carted_products/#{carted_product.id}", method: :delete %></h3>
<% end %>
</div>

<%= form_tag '/orders', method: :post do %>
<div><input type="submit" value="Buy Now!" class="btn btn-success"></div>
<% end %>
