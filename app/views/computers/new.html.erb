<% @computer.errors.full_messages.each do |error| %>
<h2><%= error %></h2>
<% end %>

<h1>Item for sale</h1>

<%= form_tag "/computers", method: :post do %>
    <div>Item Name: <input type="text" name="name" value="<%= @computer.name %>"></div>
    <div>Price: <input type="text" name="price" value="<%= @computer.price %>"></div>
    <div>Supplier: <%= collection_select :supplier, :supplier_id, Supplier.all, :id, :name %></div>
    <div>Description: <input type="text" name="description" value="<%= @computer.description %>"> </div>
    <input type="submit" value="Submit">
<% end %>